# ghostty +list-keybinds --default
# ghostty +show-config --default --docs | nvim

# COLORS & THEME
# Auto theme switching to match your editor setup
# Use Tokyo Night theme to match nvim better
theme = light:Catppuccin Latte,dark:Catppuccin Mocha
window-colorspace = srgb
window-theme = system
# window-subtitle = working-directory
# Let tmux control the window title to show session name

# FONT & DISPLAY
font-family = "Fira Code"
font-feature = +liga
font-size = 10.5
cursor-style = bar
cursor-style-blink = true
# cursor-opacity     = 0.8
cursor-opacity = 0.5
cursor-invert-fg-bg            = true
bold-is-bright                 = true
adjust-cursor-thickness        = 3
adjust-underline-position      = 3
window-inherit-font-size       = true

font-feature = -calt
font-feature = -liga
font-feature = -dlig

# WINDOW & LAYOUT  
window-theme = auto
macos-titlebar-style = hidden
macos-titlebar-proxy-icon = visible
window-padding-x = 8
window-padding-y = 8
window-decoration = true
window-title-font-family = "Fira Code"
macos-non-native-fullscreen = true

# KEYBINDINGS
keybind = super+r=reload_config
keybind = ctrl+enter=unbind
keybind = cmd+enter=unbind
# training wheel for old save
keybind = super+s=unbind

# SPLIT NAVIGATION
keybind = super+shift+j=goto_split:down
keybind = super+shift+k=goto_split:up
keybind = super+shift+l=goto_split:right
keybind = super+shift+h=goto_split:left

# TMUX RESIZE - Send custom escape sequences for Alt+Shift+hjkl
# These enable tmux pane resizing to work consistently
keybind = alt+shift+h=text:\x1bH
keybind = alt+shift+j=text:\x1bJ
keybind = alt+shift+k=text:\x1bK
keybind = alt+shift+l=text:\x1bL

# QUICK TERMINAL
# #TODO make this always open in my mac screen. not the other external monitors
keybind = global:super+ctrl+shift+alt+9=toggle_quick_terminal
quick-terminal-position = left
quick-terminal-screen = macos-menu-bar

# MISC OPTIONS
confirm-close-surface = true
quit-after-last-window-closed = false
window-save-state = always
macos-option-as-alt = true

# SCROLLING & PERFORMANCE
scrollback-limit = 100000

# SHELL
shell-integration = zsh
# Disable cursor feature which can add latency on new panes
shell-integration-features = sudo,title


# ********************** experiments **************
mouse-hide-while-typing = true
clipboard-read = allow
clipboard-write = allow
mouse-shift-capture = true
# QUESTION: what should this be?
copy-on-select = true

